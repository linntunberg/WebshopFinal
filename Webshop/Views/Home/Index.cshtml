@{
    ViewData["Title"] = "Home Page";
}

<body style="background-color: black"></body>


<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox" style="height:700px" align="center">
        <div class="item active"  >
            <img src="~/images/vinylrosegolddress.jpg" alt="Clothing Image" class="img-responsive" style="height: 700px"/>
            <div class="carousel-caption" role="option">
                <p>
                    Rose Gold Vinyl Dress <br>
                    <a class="btn btn-default" href="">
                        Go To Item
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/greenlacetop.jpg" alt="Clothing Image" class="img-responsive" style="height: 700px"/>
            <div class="carousel-caption" role="option">
                <p>
                    Green Lace Top <br>
                    <a class="btn btn-default" href="">
                        Go To Item
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/iridescentdress.jpg" alt="Clothing Image" class="img-responsive" style="height: 700px"/>
            <div class="carousel-caption" role="option">
                <p>
                    Iridescent Space Dress <br>
                    <a class="btn btn-default" href="">
                        Go To Item
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/unicornoveralls.jpg" alt="Clothing Image" class="img-responsive" style="height: 700px"/>
            <div class="carousel-caption" role="option">
                <p>
                    Unicorn Overalls <br>
                    <a class="btn btn-default" href="">
                        Go To Item
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

